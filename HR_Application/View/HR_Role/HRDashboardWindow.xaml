<Window x:Class="HR_Application.View.HRDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Application.View"
        xmlns:localusercontrol="clr-namespace:HR_Application.View.HR_Role.UserControls"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="HRDashboardWindow" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        >

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

    </Window.Resources>

    <!--eff2f7-->
    <Border Background="#f5f6fa" CornerRadius="30" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />
                <!--sidebar-->
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto " />
                    <!--header-->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--Menu icon-->
                <Button Style="{StaticResource topButton}" Margin="20 28 0 10">
                    <Icon:PackIconMaterial Kind="Menu" Width="15" Height="15"/>
                </Button>

                <Border Grid.Row="1" Background="#0ea5e9" CornerRadius="0 50 0 30">
                    <DockPanel>
                        <!--Menu Logo-->

                        <Border Width="70" Height="70" Padding="3" Background="White" CornerRadius="100"
                        DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0 20 0 0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush  ImageSource="/Assets/Images/login_page.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>

                        <!--MENU TITLE-->

                       
                        <TextBlock Foreground="{StaticResource White_PrimaryColor}"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   DockPanel.Dock="Top"
                                   TextAlignment="Center"
                                   Margin="5 15 0 10">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="CurrentUser.FirstName"/>
                                    <Binding Path="CurrentUser.LastName"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>        
                        <TextBlock Text="{Binding CurrentUser.Role}" Foreground="{StaticResource White_PrimaryColor}" FontSize="14" FontWeight="SemiBold"
                                DockPanel.Dock="Top" TextAlignment="Center" />

                        <!--Menu seporator-->
                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background ="{StaticResource PrimaryColor_300}"/>

                        <!--Menu buttons-->
                        <StackPanel DockPanel.Dock="Top">
                            <Button Style="{StaticResource menuButton}" Click="HomeButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="HomeVariant" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Home" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}" Click="EmployeeManagementButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="AccountMultipleOutline" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Employee Management" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}" Click="AttendanceAndLeaveButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="ArrowRightBox" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Attendance And Leave" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}" Click="PayrollManagementButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="CashMultiple" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Payroll Management" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}" Click="PerformanceAndReportsButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="ChartArc" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Performance And Reports" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}" Click="NotificationsButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Bell" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Notifications" />
                                </StackPanel>
                            </Button>


                        </StackPanel>


                        <Button Style="{StaticResource menuButton}" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="15 0 15 20">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Logout" />
                            </StackPanel>
                        </Button>

                    </DockPanel>
                </Border>


            </Grid>

            <!--Main section-->


            <Grid Grid.Column="1" Margin="30 10 20 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--titlebar Buttons-->
                <Button  x:Name="closeBtn" Click="CloseWindow" Style="{StaticResource topButton}" Margin="0 0 -3 0"  HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Close"/>
                </Button>

                <Button x:Name="maximizeBtn" Click="MaximizeOrRestoreWindow" Style="{StaticResource topButton}" Margin="0 0 32 0"  HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="SquareOutline"/>
                </Button>

                <Button x:Name="minimizeBtn" Click="MinimizeWindow" Style="{StaticResource topButton}" Margin="0 0 68 0" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Minus"/>
                </Button>

                <!--Serch TextBox-->
                <Grid Grid.Row="1" Width="300" HorizontalAlignment="Left">
                    <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
           Panel.ZIndex="1" Text="Search Here..."
           Visibility="{Binding ElementName=txtSearch, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>

                    <TextBox x:Name="txtSearch" Style="{StaticResource textboxSearch}"/>

                    <Icon:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
                       Margin="0 0 15 0" Foreground="#b0b9c6" HorizontalAlignment="Right"/>
                </Grid>


                <!--Top Buttons-->
                <Button Grid.Row="1" Style="{StaticResource topButton}" Margin="0 0 20 0" Background="#dcdcdc" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Cog"/>

                </Button>

                <Button Grid.Row="1"  Style="{StaticResource topButton}" Margin="0 0 55 0" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Bell"/>

                </Button>

                <!--<localusercontrol:Home x:Name="EmployeeManagement" Grid.Row="2"   Margin="0,0,0,0" />-->
                <!--<localusercontrol:EmployeeManagement x:Name="EmployeeManagement" Grid.Row="2"   Margin="0,0,0,0" />-->
                <!--<localusercontrol:Home x:Name="EmployeeManagement" Grid.Row="2"   Margin="0,0,0,0" />-->
                <!--<localusercontrol:Home x:Name="EmployeeManagement" Grid.Row="2"   Margin="0,0,0,0" />-->
                <!--<localusercontrol:Home x:Name="EmployeeManagement" Grid.Row="2"   Margin="0,0,0,0" />-->
                <!--<localusercontrol:Home x:Name="EmployeeManagement" Grid.Row="2"   Margin="0,0,0,0" />-->
                <ContentControl x:Name="MainContentArea" Grid.Row="2" />

            </Grid>


        </Grid>



    </Border>


</Window>
