<Window x:Class="HR_Application.View.EmployeeRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Application.ViewModel"
        mc:Ignorable="d"
        Title="EmployeeRegistrationWindow" Height="600" Width="400"
        WindowStartupLocation="CenterScreen">

        <Window.DataContext>
            <local:EmployeeRegistrationViewModel />
        </Window.DataContext>

    <Grid Margin="10">
        <StackPanel>
            <!-- Changed PlaceholderText (not valid in WPF TextBox) to a Watermark using a TextBlock label above -->
            <TextBlock Text="First Name" />
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>
            
            <TextBlock Text="Last Name" />
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>

            <TextBlock Text="Email" />
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>

            <TextBlock Text="Phone Number" />
            <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>

            <TextBlock Text="Department" />
            <ComboBox Text="{Binding Department, UpdateSourceTrigger=PropertyChanged}"
                      ItemsSource="{Binding Source={x:Static local:Departments.DepartmentsList}}" Margin="0 0 0 10"/>

            <TextBlock Text="Position" />
            <ComboBox Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}"
                      ItemsSource="{Binding Source={x:Static local:Postions.PostionsList}}" Margin="0 0 0 10"/>

            <!--<TextBlock Text="Salary" />
            <TextBox Text="{Binding Salary, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>-->

            <TextBlock Text="Date of Birth" />
            <DatePicker  SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>

            <TextBlock Text="Joining Date" />
            <DatePicker SelectedDate="{Binding JoiningDate, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>

            <!--<TextBlock Text="Profile Picture Path" />
            <TextBox Text="{Binding ProfilePicturePath, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>-->

            <!--<TextBlock Text="Username" />
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>

            <TextBlock Text="Password" />
            <PasswordBox Margin="0 0 0 10" local:PasswordBoxHelper.BindPassword="True" local:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->


            <TextBlock Text="Role Access" />
            <ComboBox Text="{Binding Role, UpdateSourceTrigger=PropertyChanged}"
                     ItemsSource="{Binding Source={x:Static local:Roles.RolesList}}" Margin="0 0 0 10"/>

            <TextBlock Text="Gender" />
            <ComboBox SelectedItem="{Binding Gender, UpdateSourceTrigger=PropertyChanged}" 
                      ItemsSource="{Binding Source={x:Static local:Genders.GenderList}}"  Margin="0 0 0 10"/>

            <TextBlock Text="Address" />
            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>

            <Button Content="Save" Command="{Binding SaveCommand}" HorizontalAlignment="Right" Width="100"/>
        </StackPanel>
    </Grid>



</Window>
